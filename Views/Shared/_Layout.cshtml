<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bombardino Cardealo</title>
    <!-- web icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
    <link rel="shortcut icon" href="/favicon/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bombardiro_Cardealo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --croc-primary: #2A5C3D;
            --croc-secondary: #8B5A2B;
            --croc-accent: #D4AF37;
            --croc-light: #F5F5DC;
            --croc-dark: #3E2723;
        }

        /* Optimized navbar logo sizing */
        .navbar-brand img {
            height: 40px; 
            width: auto;
            transition: transform 0.3s ease;
        }

            .navbar-brand img:hover {
                transform: scale(1.1);
            }
    </style>
</head>
<body class="bg-croc-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: var(--croc-primary);">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/crocs.png" alt="Bombardino Cardealo Logo" style="height: 120px;" class="me-2" />
                    <span class="fw-bold">Bombardino Cardealo</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Browse">
                                <i class="fas fa-car me-1"></i>Browse
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Wishlist">
                                <i class="fas fa-heart me-1"></i>Wish List
                                <span class="badge rounded-pill" style="background-color: var(--croc-accent); color: var(--croc-dark);">@ViewBag.WishlistCount</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="py-4" style="background-color: var(--croc-primary); color: white;">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>🐊 Bombardino Cardealo 🐊</h5>
                    <p>📋 Your premium car dealership with the best selection of vehicles 📋</p>
                </div>
                <div class="col-md-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: var(--croc-accent);">About Us</a></li>
                        <li><a href="#" style="color: var(--croc-accent);">Contact</a></li>
                        <li><a href="#" style="color: var(--croc-accent);">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Contact</h5>
                    <address>
                        123 Car Street<br>
                        Auto City, AC 12345<br>
                        <i class="fas fa-phone me-1"></i> (123) 456-7890
                    </address>
                </div>
            </div>
            <hr style="background-color: var(--croc-accent);">
            <div class="text-center">
                &copy; 2025 Bombardino Cardealo - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: var(--croc-accent);">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>