@model Bombardiro_Cardealo.Models.Car
@{
    ViewData["Title"] = "Add New Car";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Add New Vehicle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddCar" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Vehicle Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter vehicle name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PriceRange" class="form-label">Price Range</label>
                            <input asp-for="PriceRange" class="form-control" placeholder="Enter price range">
                            <span asp-validation-for="PriceRange" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label for="image" class="form-label">Vehicle Image</label>
                            <input type="file" name="image" class="form-control" accept="image/*" required>
                            <div class="form-text">Upload a high-quality image of the vehicle</div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Home/Browse" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Add Vehicle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>